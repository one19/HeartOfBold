<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Orientation</th>
      <th>Size</th>
      <th>Functions</th>
      <th>Sprite</th>
      <th>Biome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.orientation %></td>
        <td><%= room.size %></td>
        <td><%= room.functions %></td>
        <td><%= room.sprite %></td>
        <td><%= room.biome_id %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

