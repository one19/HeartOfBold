window.onload = function() {

  //  Create the game and inject it into the gameContainer div.
  //  Its done in a window.onload event, but you can do it anywhere (requireJS load, anonymous function, jQuery dom ready,)
  if ( $("#gameContainer").length > 0 ) {
    BasicGame.game = new Phaser.Game(800, 600, Phaser.AUTO, 'gameContainer');
    //BasicGame.gameProto = new BasicGame.Game();
    //  Add the States your game has.
    //  Don't have to do this in the html, it could be done in the Boot state too.
    //  As each state gets started it will call the next state.
    BasicGame.game.state.add('Boot', BasicGame.Boot);
    BasicGame.game.state.add('Preloader', BasicGame.Preloader);
    BasicGame.game.state.add('MainMenu', BasicGame.MainMenu);
    BasicGame.game.state.add('Game', BasicGame.Game);


    //  Now start the Boot state.
    BasicGame.game.state.start('Boot');
  }

};